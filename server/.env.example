NODE_ENV=development
PORT=5000

# MongoDB
# Primary: MongoDB Atlas (Cloud)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cinemaflix
# Or for local only: mongodb://localhost:27017/cinemaflix

# Fallback: Local MongoDB Compass (automatically used if Atlas is offline)
MONGO_URI=mongodb://localhost:27017/cinemaflix

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# TMDB API (The Movie Database)
TMDB_API_KEY=your_tmdb_api_key
# Get your API key from: https://www.themoviedb.org/settings/api

# Cloudinary (for image/video uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Client URL
CLIENT_URL=http://localhost:5173

# Payment Gateways
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
# Mode: sandbox or live

# Razorpay (for India)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Flutterwave (for Africa)
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_ENCRYPTION_KEY=your_encryption_key

# Paystack (Alternative for Africa)
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key
